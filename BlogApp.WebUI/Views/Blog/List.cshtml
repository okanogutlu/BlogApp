@model IEnumerable<BlogApp.Entity.Blog>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";//admin ve kullanıcı diye ikiye ayırdık.
}
<div class="container mt-3">
    <h2>Blog List</h2>
    <hr />

    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>is Approved</th>
                            <th>is Home</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td><img width="100" src="~/img/@item.Image" /></td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td>@item.isApproved</td>
                                <td>@item.isHome</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="AddorUpdate" asp-route-id="@item.ID">
                                        Details
                                    </a>
                                    <a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal">
                                        Delete
                                    </a>
                                    <div id="myModal" class="modal fade" role="dialog">
                                        <div class="modal-dialog">

                                            <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Modal Header</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you really want to delete @item.Title ?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <a class="btn btn-default"  asp-controller="Blog" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                                    <a class="btn btn-default" data-dismiss="modal">Close</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <div class="alert alert-danger">
                    Blog Eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>

