@model IEnumerable<BlogApp.Entity.Category>

<div class="list-group">

    @foreach (var item in Model)
    {
        <a asp-controller="blog" asp-action="index" asp-route-id="@item.ID" 
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.ID.ToString()? "active":"")">
            @item.Name
        </a>
    }
</div>